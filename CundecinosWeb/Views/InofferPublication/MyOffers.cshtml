@using CundecinosWeb.Enum;
@model List<CundecinosWeb.Models.PublicationComments>
@foreach (var item in Model)
{
    <div class="card mb-5 mb-xl-8">
        <!--begin::Body-->
        <div class="card-body pb-0">

            <div class="separator mb-4"></div>


            <div class="px-10 py-4">
                <div class="d-flex align-items-center mb-5">
                    <!--begin::User-->
                    <div class="d-flex align-items-center flex-grow-1">
                        <!--begin::Avatar-->
                        <div class="symbol symbol-45px me-5">
                            <img class="imagen-avatar" src="@item.Person.AvatarUrl" alt="Avatar Usuario" />
                        </div>
                        <!--end::Avatar-->
                        <!--begin::Info-->
                        <div class="d-flex flex-column">
                            <a href="#" class="text-gray-800 text-hover-primary fs-6 fw-bolder">@item.Person.FirstName @item.Person.LastName</a>
                            <span class="text-gray-400 fw-bold">@item.Person.Email</span>
                        </div>
                        <!--end::Info-->
                    </div>
                    <!--end::User-->
                    <div class="d-flex flex-column">
                        @if (item.StatusInnofer == StatusInnofer.Create)
                        {
                            <span class="badge badge-light-success">Creada</span>
                        }
                        @if (item.StatusInnofer == StatusInnofer.InNegotiation)
                        {

                            <span class="badge badge-light-success">En negociación</span>
                        }
                        @if(item.StatusInnofer == StatusInnofer.Completed)
                        {
                            <span class="badge badge-light-warning">Completada</span>
                        }

                    </div>
                </div>



                <div class="fv-row mb-5 ps-5">
                    <label class="d-flex align-items-center fs-5 fw-bold mb-2">
                        <span class="text-muted mt-1 fw-bold fs-20">@item.Content</span>
                    </label>
                </div>

                <div class="col-xl-8">
                    <!--begin::List Widget 8-->
                    <div class="card card-xl-stretch mb-5 mb-xl-8">
                        <!--begin::Header-->
                        <div class="card-header align-items-center border-0 mt-4">
                            @foreach (var imageUrl in item.CommentAttachment)
                            {
                                <!--begin::Symbol-->
                                <div class="symbol symbol-60px symbol-2by3 me-4">
                                    <div class="symbol-label" style="background-image: url('@imageUrl.ImageThumbNail'); height: 130px !important; width: 130px !important;"></div>
                                </div>
                                <!--end::Symbol-->
                            }
                        </div>
                        <!--end::Header-->
                    </div>
                    <!--end::List Widget 8-->
                </div>






                <!--begin::Toolbar-->
                <div class="d-flex align-items-center mb-5">

                    <a asp-action="PublicationDescription" asp-controller="PublicationComment" asp-route-id="@item.PublicationID" class="btn btn-sm btn-light btn-color-muted btn-active-light-success px-4 py-2 me-4">
                        <!--begin::Svg Icon | path: icons/duotone/Communication/Group-chat.svg-->
                        <span class="svg-icon svg-icon-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <path d="M16,15.6315789 L16,12 C16,10.3431458 14.6568542,9 13,9 L6.16183229,9 L6.16183229,5.52631579 C6.16183229,4.13107011 7.29290239,3 8.68814808,3 L20.4776218,3 C21.8728674,3 23.0039375,4.13107011 23.0039375,5.52631579 L23.0039375,13.1052632 L23.0206157,17.786793 C23.0215995,18.0629336 22.7985408,18.2875874 22.5224001,18.2885711 C22.3891754,18.2890457 22.2612702,18.2363324 22.1670655,18.1421277 L19.6565168,15.6315789 L16,15.6315789 Z" fill="#000000" />
