                        </span>
                        <!--end::Svg Icon-->Ver Negociación
                    </a>
                </div>

            </div>
            <!--end::Toolbar-->
            <!--end::Separator-->
            <!--begin::Reply input-->
            <!--edit::Reply input-->
        </div>
        <!--end::Body-->
    </div>
}
