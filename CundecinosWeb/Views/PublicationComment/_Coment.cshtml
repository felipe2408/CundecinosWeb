@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@model PublicationComments

@using (Html.BeginForm("PublicationDescription", "PublicationComment", FormMethod.Post, new { enctype = "multipart/form-data", id = "comentario" }))
{
     <div class="d-flex align-items-center flex-grow-1">
        <div class="cursor-pointer symbol symbol-30px symbol-md-40px mb-3 me-3" data-kt-menu-trigger="click" data-kt-menu-attach="parent" data-kt-menu-placement="bottom-end">
            <img src="@Model.Person.AvatarUrl" alt="user" />
        </div>
        <div class="d-flex flex-column">
            <a href="#" class="text-gray-800 text-hover-primary fs-6 fw-bolder">@Model.Person.FirstName @Model.Person.LastName</a>
            <span class="text-gray-400 fw-bold">@Model.Person.Email</span>
        </div>
    </div>
    @using (Html.DevExtreme().ValidationGroup("grupoValidacion"))
    {
        <div class="fv-row mb-5">
            <label class="d-flex align-items-center fs-5 fw-bold mb-2">
                <span class="required">@Html.LabelFor(x => x.Content)</span>
                <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title=""></i>
            </label>

            @(Html.DevExtreme().TextBoxFor(x => x.Content).ID("Content"))

        </div>
        <div class="fv-row mb-5">
            @(
                Html.DevExtreme().FileUploader()
            )
        </div>
        <div class="fv-row mb-10 d-flex">
            @(Html.DevExtreme().Button()
                .ID("enviar_comentario")
                .Text("Enviar")
                .Type(ButtonType.Normal)
                .UseSubmitBehavior(true)
                .ValidationGroup("grupoValidacion")
                .ElementAttr("class", "btn btn-primary mx-auto")
                .Height(50)
                )
        </div>
    }
}