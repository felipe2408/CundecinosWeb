                    }
                    @if (Model.Publication.Status == Status.Negotiation && userID == @Model.Publication.Person.UID)
                    {

                        <a asp-action="AcceptOffers" asp-controller="InofferPublication" asp-route-id="@item.PublicationCommentsID" class="btn btn-sm btn-light btn-color-muted btn-active-light-success px-4 py-2 me-4">
                            <!--begin::Svg Icon | path: icons/duotone/Communication/Group-chat.svg-->
