@using CundecinosWeb.Enum;
@model CundecinosWeb.ViewModel.vPublicationComment
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
<div class="card mb-5 mb-xl-8">
    <!--begin::Body-->
    <div class="card-body pb-0">
        <!--begin::Header-->
        <div class="d-flex align-items-center mb-5">
            <!--begin::User-->
            <div class="d-flex align-items-center flex-grow-1">
                <!--begin::Avatar-->
                <a asp-controller="Chat" asp-action="ChatUser" asp-route-id="@Model.Person.UID">
                    <div class="symbol symbol-45px me-5">
                        <img class="imagen-avatar" src="@Model.Person.AvatarUrl" alt="Avatar Usuario" />

                    </div>
                </a>
                <!--end::Avatar-->
                <!--begin::Info-->
                <div class="d-flex flex-column">
                    <a asp-controller="Chat" asp-action="ChatUser" asp-route-id="@Model.Person.UID" class="text-gray-800 text-hover-primary fs-6 fw-bolder">@Model.Person.FirstName @Model.Person.LastName</a>
                    <span class="text-gray-400 fw-bold">@Model.Person.Email</span>
                </div>
                <!--end::Info-->
            </div>
            <!--end::User-->
            @if (Model.Publication.PublicationType == PublicationType.Sale)
            {

                <span class="badge badge-light-success">En Venta</span>

            }
            else
            {
                <span class="badge badge-light-warning">En Trueque</span>
            }

            @if (Model.Publication.Status == Status.Negotiation)
            {

                <span class="badge badge-light-success">En Negociación</span>

            }
            else
            {
                <span class="badge badge-light-warning">Intercambiado</span>
            }


        </div>
        <!--end::Header-->
        <!--begin::Post-->
