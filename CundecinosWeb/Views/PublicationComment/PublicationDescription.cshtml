                        <div class="card-header align-items-center border-0 mt-4">
                            <h3 class="card-title align-items-start flex-column">

                                <span class="fw-bolder text-dark">@Model.Publication.Qualification</span>
                                <span class="text-muted mt-1 fw-bold fs-7">@Model.Publication.Content</span>
                                <span class="text-muted mt-1 fw-bold fs-7">Descripción del Producto : @Model.Publication.ProductDescription</span>
                                <span class="text-muted mt-1 fw-bold fs-7">Precio Estimado : @Model.Publication.EstimatedPrice</span>
                            </h3>
                            <div class="card-toolbar">

                                <!--end::Menu-->
                            </div>
                        </div>
                        <!--end::Header-->
                    </div>
                    <!--end::List Widget 7-->
                </div>
                <div class="col-xl-9">
