        <!--end::Separator-->
        <!--begin::Reply input-->
        @if (Model.Publication.Status != Status.Exchanged)
        {
            <div class="px-10">
                @{
                    Model.PublicationComment = new PublicationComments { PersonID = ViewBag.UserID, PublicationID = Model.Publication.PublicationID };
                }
                <partial name="_Coment" model="Model.PublicationComment" />
            </div>
        }
        <!--edit::Reply input-->
    </div>
    <!--end::Body-->
</div>
