            <!--end::Toolbar-->
        </div>
        <!--end::Post-->
        <!--begin::Separator-->
        <div class="separator mb-4"></div>

        @foreach (var item in Model.PublicationComments)
        {
            <div class="card mb-5 mb-xl-8">

                <img src="@item.Person.AvatarUrl" />
                <label>@item.Person.FirstName @item.Person.LastName</label>

                <img src="@item.ProductUrl">

                <label>@item.Content</label>

                <label>@item.CommentDate</label>



                <a asp-controller="Chat" asp-action="ChatUser" asp-route-id="@item.Person.UID">Contactar</a>

            </div>
        }
        <!--end::Separator-->
        <!--begin::Reply input-->

        <div class="px-10">
            @{
                Model.PublicationComment = new PublicationComments { PersonID = Model.Person.PersonID, PublicationID = Model.Publication.PublicationID };
            }
            <partial name="_Coment" model="Model.PublicationComment" />
        </div>
        <!--edit::Reply input-->
    </div>
    <!--end::Body-->
</div>
<!--end::Feeds Widget 2-->
