@using CundecinosWeb.Enum;
@model List<Publication>

<div id="kt_content_container" class="container">
    @if (Model == null)
    {
        <!--begin::Notice-->
        <div class="notice d-flex bg-light-primary rounded border-primary border border-dashed min-w-lg-600px flex-shrink-0 p-6 justify-content-center">

            <!--begin::Wrapper-->
            <div>
                <!--begin::Content-->
                <div class="mb-3 mb-md-0 fw-bold" id="message">
                    <h4 class="text-gray-800 fw-bolder">No ha realizado ninguna publicación</h4>
                </div>
                <!--end::Content-->
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Notice-->
    }
    else
    {
        @foreach (var item in Model)
        {
            <!--begin::Feeds Widget 2-->
            <div class="card mb-5 mb-xl-8">
                <!--begin::Body-->
                <div class="card-body pb-0">
                    <!--begin::Header-->
                    <div class="d-flex align-items-center mb-5">
                        <!--begin::User-->
                        <div class="d-flex align-items-center flex-grow-1">
                            <!--begin::Avatar-->
                            <div class="symbol symbol-45px me-5">
                                <img class="imagen-avatar" src="@item.Person.AvatarUrl" alt="Avatar Usuario" />
                            </div>
                            <!--end::Avatar-->
                            <!--begin::Info-->
                            <div class="d-flex flex-column">
                                <a href="#" class="text-gray-800 text-hover-primary fs-6 fw-bolder">@item.Person.FirstName @item.Person.LastName</a>
                                <span class="text-gray-400 fw-bold">@item.Person.Email</span>
                            </div>
                            <!--end::Info-->
                        </div>
                        <!--end::User-->
                        <!--begin::Menu-->
                        <div class="my-0">
                            <button type="button" class="btn btn-sm btn-icon btn-color-primary btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-flip="top-end">
                                <!--begin::Svg Icon | path: icons/duotone/Layout/Layout-4-blocks-2.svg-->
                                <span class="svg-icon svg-icon-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                            <rect x="5" y="5" width="5" height="5" rx="1" fill="#000000" />
                                            <rect x="14" y="5" width="5" height="5" rx="1" fill="#000000" opacity="0.3" />
                                            <rect x="5" y="14" width="5" height="5" rx="1" fill="#000000" opacity="0.3" />
                                            <rect x="14" y="14" width="5" height="5" rx="1" fill="#000000" opacity="0.3" />
                                        </g>
                                    </svg>
                                </span>
                                <!--end::Svg Icon-->
                            </button>
                            <!--begin::Menu 2-->
                            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold w-200px" data-kt-menu="true">
                                <!--begin::Menu item-->
                                <div class="menu-item px-3">
                                    <div class="menu-content fs-6 text-dark fw-bolder px-3 py-4">Acciones rápidas</div>
                                </div>
                                <!--end::Menu item-->
                                <!--begin::Menu separator-->
                                <div class="separator mb-3 opacity-75"></div>
                                <!--end::Menu separator-->
                                <!--begin::Menu item-->
                                <div class="menu-item px-3">
                                    <a asp-controller="MyPublication" asp-action="EditPublication" asp-route-id="@item.PublicationID" class="menu-link px-3">Editar publicación</a>
                                </div>
                                <!--end::Menu item-->
                                <!--begin::Menu item-->
                                <div class="menu-item px-3">
                                    <a asp-controller="MyPublication" asp-action="HidePublication" asp-route-id="@item.PublicationID" class="menu-link px-3 text-danger">Eliminar publicacion</a>
                                </div>
                            </div>
                            <!--end::Menu 2-->
                        </div>
                        <!--end::Menu-->
                    </div>
                    <!--end::Header-->
                    <!--begin::Post-->
                    <div class="mb-5">
                        <!--begin::Text-->
                        <p class="text-gray-800 fw-normal mb-5">@item.Qualification</p>
                        <p class="text-gray-800 fw-normal mb-5">@item.Content</p>
                        @if (item.PublicationType == PublicationType.Sale)
                        {

                            <p class="text-gray-800 fw-normal mb-5">En Venta</p>

                        }
                        else
                        {

                            <p class="text-gray-800 fw-normal mb-5">En Trueque</p>
                        }


                        @foreach (var imageUrl in item.PublicationAttachment)
                        {
                            <div class="symbol symbol-45px me-5">
                                <img class="imagenes-publicaciones" src="@imageUrl.ImageThumbNail" alt="Imagenes Publicaciones" />
                            </div>

                        }

                        <!--end::Text-->

                    </div>
                    <!--end::Post-->
                    <!--begin::Separator-->
                    <div class="separator mb-4"></div>
                    <!--end::Separator-->
                </div>
                <!--end::Body-->
            </div>
            <!--end::Feeds Widget 2-->
        }
    }
</div>