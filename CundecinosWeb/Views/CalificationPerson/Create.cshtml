                                                    <br />

                                                </div>

                                                <!--end::Content-->
                                            </div>
                                            <!--end::Wrapper-->
                                        </div>
                                        <!--end::Notice-->
                                    </div>
                                    <!--begin::Col-->
                                    
                                    <div class="containerStart ">
                                        <div class="post">
                                            <div class="text">Thanks for rating us!</div>
                                            <div class="edit">EDIT</div>
                                        </div>
                                        <div class="star-widget">
                                            <input type="radio" name="rate" id="rate-5" onclick="Start5()">

                                            <label for="rate-5" class="fas fa-star"></label>

                                            <input type="radio" name="rate" id="rate-4" onclick="Start4()">
                                            
                                            <label for="rate-4" class="fas fa-star"></label>

                                            <input type="radio" name="rate" id="rate-3" onclick="Start3()">
                                            
                                            <label for="rate-3" class="fas fa-star"></label>

                                            <input type="radio" name="rate" id="rate-2" onclick="Start2()">
                                            
                                            <label for="rate-2" class="fas fa-star"></label>

                                            <input type="radio" name="rate" id="rate-1" onclick="Start1()">
                                            
                                            <label for="rate-1" class="fas fa-star"></label>
                                         
                                        </div>
                                        <div  class="textarea">
                                            <!--begin::Col-->
                                            <div class="col-xl-2 fv-row">
                                                <div class="fs-6 fw-bold mt-2 mb-3">Comentarios</div>
                                            </div>
                                            <!--begin::Col-->
                                            <div class="col-xl-10">
                                                @(Html.DevExtreme().TextBoxFor(x => x.CalificationPerson.Observations))
                                            </div>


                                            <!--end::Col-->
                                        </div>
                                        <div class="btn">
                                            @(Html.DevExtreme().Button()
                                                .ID("Publication")
                                                .Text("Guardar")
                                                .Type(ButtonType.Success)
                                                // Instructs the Button to validate the TextBoxes and submit the form
                                                .UseSubmitBehavior(true)
                                                )

                                        </div>
                                    </div>





                                   @* <div class="col-xl-10">

                                        @(Html.DevExtreme().SelectBoxFor(m => m.CalificationPerson.Calification)
